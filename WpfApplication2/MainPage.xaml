<Page x:Class="WpfApplication2.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:WpfApplication2"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Background="Wheat"
      Title="MainPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Name="startButton" Content="Start" Margin="5" Click="StartButton_OnClick" HorizontalAlignment="Center"/>
            <Button Content="Setting" Width="20" Height="20" Click="Open_Setting_Btn" HorizontalAlignment="Left"/>
        </StackPanel>

        <TextBox Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Name="textBox1" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>
            
        
        <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" Margin="20,0,0,0"  Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Bottom">
            <Border Grid.Row="3" Grid.Column="1" HorizontalAlignment="Center" Margin="0,20" Background="#FFE8E8E8" Width="240">
                <StackPanel Margin="20">
                    <TextBlock Text="Размер" FontSize="20"  />
                    
                </StackPanel>
            </Border>
        </StackPanel>

        <Frame x:Name="Frame" Grid.Row="1" Grid.Column="1"/>
    </Grid>
</Page>
